<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20sp"
    android:layout_marginEnd="20sp"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:orientation="vertical">


    <androidx.appcompat.widget.SearchView
        app:searchIcon="@drawable/ic_baseline_search_24"
        style="@style/Theme.AppCompat.NoActionBar"
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:iconifiedByDefault="false"
        android:nestedScrollingEnabled="false"
        android:queryHint="Find Your Songs"
        android:visibility="visible"
        app:defaultQueryHint="Find Your Songs"
        app:iconifiedByDefault="false"
        app:queryHint="Find Your Songs">


    </androidx.appcompat.widget.SearchView>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colortextdark"
            android:fontFamily="@font/sb"
            android:layout_weight="0.9"
            android:textSize="30sp"
            android:text="Popular Song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button

            android:layout_weight="0.05"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/buttonpopularmore"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:textColor="@color/colortext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeeAll"
            />



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvpopularsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colortextdark"
            android:fontFamily="@font/sb"
            android:layout_weight="0.9"
            android:textSize="30sp"
            android:text="Trending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="0.05"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/buttontrendingmore"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:textColor="@color/colortext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeeAll"
            />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvtrendingsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colortextdark"
            android:fontFamily="@font/sb"
            android:layout_weight="0.9"
            android:textSize="30sp"
            android:text="Favorite Song"
            android:layout_width="0dp"

            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="0.05"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/buttonfavmore"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:textColor="@color/colortext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeeAll"
            />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvfavoritesong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colortextdark"
            android:fontFamily="@font/sb"
            android:layout_weight="0.9"
            android:textSize="30sp"
            android:text="Recent Song"
            android:layout_width="0dp"

            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="0.05"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/buttonrecentmore"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:textColor="@color/colortext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeeAll"
            />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvrecent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colortextdark"
            android:fontFamily="@font/sb"
            android:layout_weight="0.9"
            android:textSize="30sp"
            android:text="Local Song"
            android:layout_width="0dp"

            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="0.05"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/buttonlocalmore"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:textColor="@color/colortext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeeAll"
            />




    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvlocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>